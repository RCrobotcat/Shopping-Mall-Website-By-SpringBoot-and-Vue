op=\"goodsPrice\" label=\"商品单价\">\r\n                <template v-slot=\"scope\">\r\n                  <span>￥{{ scope.row.goodsPrice }} / {{ scope.row.goodsUnit }}</span>\r\n                </template>\r\n              </el-table-column>\r\n              <el-table-column prop=\"goodsPrice\" label=\"下单数量\">\r\n                <template v-slot=\"scope\">\r\n                  <span>{{ scope.row.num }}</span>\r\n                </template>\r\n              </el-table-column>\r\n              <el-table-column prop=\"goodsPrice\" label=\"订单总价\">\r\n                <template v-slot=\"scope\">\r\n                  <span>￥{{ scope.row.price }}</span>\r\n                </template>\r\n              </el-table-column>\r\n              <el-table-column prop=\"goodsPrice\" label=\"收货人\">\r\n                <template v-slot=\"scope\">\r\n                  <span>{{ scope.row.username }}</span>\r\n                </template>\r\n              </el-table-column>\r\n              <el-table-column prop=\"goodsPrice\" label=\"收货地址\">\r\n                <template v-slot=\"scope\">\r\n                  <span>{{ scope.row.useraddress }}</span>\r\n                </template>\r\n              </el-table-column>\r\n              <el-table-column prop=\"goodsPrice\" label=\"联系电话\">\r\n                <template v-slot=\"scope\">\r\n                  <span>{{ scope.row.phone }}</span>\r\n                </template>\r\n              </el-table-column>\r\n              <el-table-column prop=\"goodsPrice\" label=\"订单状态\">\r\n                <template v-slot=\"scope\">\r\n                  <span>{{ scope.row.status }}</span>\r\n                </template>\r\n              </el-table-column>\r\n              <el-table-column label=\"操作\" align=\"center\" width=\"180\">\r\n                <template v-slot=\"scope\">\r\n                  <el-button size=\"mini\" type=\"danger\" plain @click=\"del(scope.row.id)\">取消订单</el-button>\r\n                </template>\r\n              </el-table-column>\r\n    